{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": [
            "DOM",
            "ES2018"
        ],
        "allowJs": true,
        "checkJs": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "types": [
            "node"
        ]
    }
}
